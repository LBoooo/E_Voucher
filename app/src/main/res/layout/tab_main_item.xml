<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tabView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5px">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tabNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@drawable/tab_item_text_color_main"
            android:textSize="12sp"/>
    </LinearLayout>

    <com.evoucher.accv.e_voucher.view.w.DragPointView
android:visibility="gone"
        android:layout_marginTop="10px"
        android:id="@+id/tabDpv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_drag_point_red"
        android:gravity="center"
        android:paddingLeft="10px"
        android:paddingRight="10px"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:centerMinRatio="0.5"
        app:colorStretching="@color/red"
        app:recoveryAnimBounce="0.25"/>
</RelativeLayout>