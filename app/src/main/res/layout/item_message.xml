<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="160px"
              android:background="@color/white"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_marginTop="10px"
        android:background="@color/backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="150px"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25px"
            android:src="@mipmap/ic_launcher"/>

        <com.evoucher.accv.e_voucher.view.w.DragPointView
            android:visibility="invisible"
            android:id="@+id/itemMessageDpv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10px"
            android:background="@drawable/shape_drag_point_red"
            android:gravity="center"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:centerMinRatio="0"
            app:colorStretching="@color/red"
            app:recoveryAnimBounce="0"/>
            <!--app:dragCircleRadius="100px"-->
            <!--app:maxDragLength="100px"-->
        <!--app:clearSign="test"-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="消息名"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="时间"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:maxLines="1"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:textSize="15sp"/>
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>