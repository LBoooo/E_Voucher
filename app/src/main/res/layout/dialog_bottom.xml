<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_margin="20px"
        android:background="@drawable/shape_round_corner_background"
        android:padding="20px">

        <ImageView
            android:id="@+id/closePayDialogBtn"
            android:paddingLeft="20px"
            android:paddingBottom="20px"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:src="@mipmap/back_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingTop="30px">

            <TextView
                android:paddingBottom="30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="请选择付款方式"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <LinearLayout
                android:id="@+id/WeiChatPayBtn"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:src="@color/light_grey"/>

                <TextView
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信支付"/>

                <ImageView
                    android:id="@+id/weiChatPaySw"
                    android:layout_width="40px"
                    android:layout_height="40px"/>
            </LinearLayout>

            <View
                style="@style/h_line"/>

            <LinearLayout
                android:id="@+id/aLiPayBtn"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="50px"
                    android:layout_height="50px"
                    android:src="@color/light_grey"/>

                <TextView
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:text="支付宝支付"/>

                <ImageView
                    android:id="@+id/aLiPaySw"
                    android:layout_width="40px"
                    android:layout_height="40px"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/confirmPaymentBtn"
        android:layout_marginBottom="20px"
        android:text="确认支付"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"/>
</LinearLayout>